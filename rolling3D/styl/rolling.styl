@charset "UTF-8";
@import "common.styl"

.wrap
	position fixed
	width 100%
	height 100%
	background #FFF
	perspective 2000px
	h1
		color #FFF
		position absolute
		top 14px
		left 50px
		width (@width/2)
		animation ani linear 4s infinite
.panel
	li
		width 800px
		height 560px
		background rgba(0,0,0,0.5)
		position absolute
		top 50%
		left 50%
		margin-top -200px
		margin-left -400px
		p
			color #FFF
			text-align center
			width 100%
			position absolute
			top 170px
			left 0
		&:nth-chid(1)
			transform scale(0.7) rotateY(60deg)
			transition transform 0.5s
		&:nth-chid(2)
			transform scale(1) rotateY(0deg)
			transition transform 0.5s
		&:nth-chid(3)
			transform scale(0.7) rotateY(-60deg)
			transition transform 0.5s
$keyframes-name = ani
@keyframes {$keyframes-name}
	for i in 0..1
		{i*100%}
			transform:rotateY(0deg)
vendor(prop,args)
	{prop} args
border-radius()
	vendor("box-radius", arguments)
.box
	border-radius 1px
.foo
	&__bar
		width: 10px
		^[0]:hover &
			width: 20px
